{
  "name": "typescript_node_starter_key",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "clean": "ts-node buildScripts/cleanBuild.ts",
    "build": "npm run clean && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node buildScripts/copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "engines": {
    "node": ">=8.12",
    "npm": ">=6.4.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.1.0",
    "express": "^4.18.2",
    "express-promise-router": "^3.0.3",
    "i18n": "^0.8.3",
    "morgan": "^1.9.1",
    "request": "^2.88.0",
    "swagger-ui-express": "^4.0.1",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.4.1"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/i18n": "^0.8.3",
    "@types/jest": "^23.3.9",
    "@types/morgan": "^1.7.35",
    "@types/node": "8",
    "@types/request": "^2.47.1",
    "@types/shelljs": "^0.7.8",
    "@types/swagger-ui-express": "^3.0.0",
    "concurrently": "^2.2.0",
    "jest": "^22.4.4",
    "nodemon": "^1.19.3",
    "shelljs": "^0.8.5",
    "supertest": "3.0.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "typescript-eslint-parser": "3.0.0"
  }
}
